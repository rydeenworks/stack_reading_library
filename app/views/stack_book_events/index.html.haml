%h1 積んだ本リスト
%a.btn.btn-primary{:href => "#", :role => "button"} Link
%button.btn.btn-primary{:type => "submit"} Button
%input.btn.btn-primary{:type => "button", :value => "Input"}/
%input.btn.btn-primary{:type => "submit", :value => "Submit"}/
%input.btn.btn-primary{:type => "reset", :value => "Reset"}/
%table.table
  %thead
    %tr
      %th Date
      %th Title
      %th Author
      %th Isbn
      %th{:colspan => "3"}
  %tbody
    - @stack_book_events.each do |stack_book_event|
      %tr
        %td= stack_book_event.date
        %td= stack_book_event.title
        %td= stack_book_event.author
        %td= stack_book_event.isbn
        %td= link_to 'Show', stack_book_event
        %td= link_to 'Edit', edit_stack_book_event_path(stack_book_event)
        %td= link_to 'Destroy', stack_book_event, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to '本を積む', new_stack_book_event_path, class:"btn btn-primary"
